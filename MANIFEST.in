# WishlistOps Package Manifest
# Specifies additional files to include in distribution

include README.md
include LICENSE
include requirements.txt
include .env.example

# Dashboard files
recursive-include dashboard *.html
recursive-include dashboard *.css
recursive-include dashboard *.js
recursive-include dashboard *.md
recursive-include dashboard/screenshots *.png
recursive-include dashboard/screenshots *.jpg
recursive-include dashboard/guides *.md

# Documentation
recursive-include docs *.md

# Configuration examples
include wishlistops/config.json
include wishlistops/test_config.json

# Exclude development files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store
global-exclude .git*
